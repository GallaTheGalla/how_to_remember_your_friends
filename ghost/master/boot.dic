OnFirstBoot
{
	variable.initialize
	--
	LastTalk = ""
	--
	"\![raise,OnBoot]"
}

OnInitialize
{
	if reference0 != "reload"
	{
		LastTalk = ""
	}
}

OnBoot
{
	SetFishingTime
	--
	displayjournal
	--
	"\0\s[0]Hello %(username).\w8 Good to see you."
	"\0\s[0]Hello.\w8 Ready to make something cool?"
}

OnClose
{
	"\0\s[0]Farewell."
	"\0\s[0]Goodbye."
	--
	"\w8\w8\-"
}

variable.initialize
{
	journalopen = 0
}

SetFishingTime
{
    FishingTime = GETSECCOUNT + (RAND(120) + 60) //1-5 minutes
}